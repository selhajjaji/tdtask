<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- Le parent Spring Boot fournit une BOM (Bill of Materials)
       qui fixe des versions compatibles pour l'écosystème Spring. -->
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>3.3.4</version>
    <relativePath/>
  </parent>

  <!-- Identité du projet -->
  <groupId>com.taskboard</groupId>
  <artifactId>taskboard</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>taskboard</name>
  <description>TD3 INF1763 – API TaskBoard avec tests, couverture et CI</description>

  <!-- Le niveau de compilation Java -->
  <properties>
    <java.version>21</java.version>
  </properties>

  <dependencies>
    <!-- API REST (contrôleurs, JSON) -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>

    <!-- Persistance (JPA/Hibernate + Spring Data) -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-data-jpa</artifactId>
    </dependency>

    <!-- Base de données H2 embarquée (aucune installation requise) -->
    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <scope>runtime</scope>
    </dependency>

    <!-- Outils de test Spring (JUnit 5, AssertJ, MockMvc, etc.) -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-test</artifactId>
      <scope>test</scope>
    </dependency>

    <!-- Mockito pour simuler (mock) les dépendances en tests unitaires -->
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-junit-jupiter</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Packaging/exécution Spring Boot -->
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>

      <!-- JaCoCo : agent de couverture + rapport HTML/XML -->
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <version>0.8.12</version>
        <executions>
          <!-- Branche l’agent au début des tests -->
          <execution>
            <goals><goal>prepare-agent</goal></goals>
          </execution>
          <!-- Génére le rapport à la phase 'verify' (après tests) -->
          <execution>
            <id>report</id>
            <phase>verify</phase>
            <goals><goal>report</goal></goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
